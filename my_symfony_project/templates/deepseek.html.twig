<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>AI Chatbot Tool - Test Now</title>
  <style>
    /* General Styles */
    body {
      font-family: 'Arial', sans-serif;
      margin: 0;
      padding: 0;
      background: #000;
      color: #fff;
      line-height: 1.6;
    }
    h1, h2, h3 {
      margin: 0;
    }
    a {
      text-decoration: none;
      color: inherit;
    }

    /* Header and Navigation */
    header {
      background: linear-gradient(135deg, #000, #222);
      padding: 20px 0;
      text-align: center;
      position: sticky;
      top: 0;
      z-index: 1000;
    }
    header h1 {
      font-size: 2.5rem;
      color: #fff;
      text-transform: uppercase;
      letter-spacing: 3px;
    }
    nav {
      display: flex;
      justify-content: center;
      gap: 20px;
      margin-top: 10px;
    }
    nav a {
      color: #ccc;
      font-weight: bold;
      transition: color 0.3s ease;
    }
    nav a:hover {
      color: #007BFF;
    }

    /* Banner Section */
    .banner {
      background: linear-gradient(135deg, #000, #333);
      padding: 100px 20px;
      text-align: center;
      position: relative;
      overflow: hidden;
    }
    .banner h1 {
      font-size: 3.5rem;
      color: #fff;
      animation: fadeIn 2s ease-in-out;
    }
    .banner p {
      font-size: 1.5rem;
      color: #ccc;
      margin: 20px 0;
      animation: fadeIn 2.5s ease-in-out;
    }

    /* Cloud-Like Button */
    .cloud-button {
      display: inline-block;
      background: #007BFF;
      color: #fff;
      padding: 15px 30px;
      font-size: 1.2rem;
      border: none;
      border-radius: 50px;
      cursor: pointer;
      position: relative;
      overflow: hidden;
      transition: background 0.3s ease, transform 0.3s ease;
    }
    .cloud-button::before, .cloud-button::after {
      content: '';
      position: absolute;
      background: rgba(255, 255, 255, 0.3);
      width: 50px;
      height: 50px;
      border-radius: 50%;
      animation: float 4s infinite ease-in-out;
    }
    .cloud-button::before {
      top: -20px;
      left: -20px;
      animation-delay: 0s;
    }
    .cloud-button::after {
      bottom: -20px;
      right: -20px;
      animation-delay: 2s;
    }
    .cloud-button:hover {
      background: #0056b3;
      transform: scale(1.1);
    }

    /* Chat Interface */
    .chat-container {
      background: #111;
      padding: 20px;
      border-radius: 10px;
      max-width: 600px;
      margin: 50px auto;
    }
    .chat-box {
      height: 300px;
      overflow-y: auto;
      border: 1px solid #333;
      border-radius: 10px;
      padding: 10px;
      margin-bottom: 10px;
      background: #222;
    }
    .chat-message {
      margin-bottom: 10px;
    }
    .chat-message.user {
      text-align: right;
      color: #007BFF;
    }
    .chat-message.bot {
      text-align: left;
      color: #ccc;
    }
    .chat-input {
      display: flex;
      gap: 10px;
    }
    .chat-input input {
      flex: 1;
      padding: 10px;
      border: 1px solid #333;
      border-radius: 5px;
      background: #222;
      color: #fff;
    }
    .chat-input button {
      background: #007BFF;
      color: #fff;
      padding: 10px 20px;
      border: none;
      border-radius: 5px;
      cursor: pointer;
      transition: background 0.3s ease;
    }
    .chat-input button:hover {
      background: #0056b3;
    }

    /* Motion Effects */
    @keyframes fadeIn {
      from { opacity: 0; }
      to { opacity: 1; }
    }
    @keyframes float {
      0% { transform: translateY(0) translateX(0); }
      25% { transform: translateY(-10px) translateX(10px); }
      50% { transform: translateY(0) translateX(0); }
      75% { transform: translateY(10px) translateX(-10px); }
      100% { transform: translateY(0) translateX(0); }
    }

    /* Features Section */
    .features {
      display: flex;
      justify-content: space-around;
      padding: 50px 20px;
      background: #111;
    }
    .feature-item {
      text-align: center;
      max-width: 300px;
      animation: slideIn 1s ease-in-out;
    }
    .feature-item h3 {
      font-size: 1.5rem;
      color: #007BFF;
    }
    .feature-item p {
      color: #ccc;
    }

    @keyframes slideIn {
      from { transform: translateY(50px); opacity: 0; }
      to { transform: translateY(0); opacity: 1; }
    }

    /* Pricing Section */
    .pricing {
      padding: 50px 20px;
      background: #000;
      text-align: center;
    }
    .pricing h2 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }
    .pricing-plans {
      display: flex;
      justify-content: center;
      gap: 20px;
    }
    .pricing-plan {
      background: #222;
      padding: 20px;
      border-radius: 10px;
      width: 300px;
      transition: transform 0.3s ease;
    }
    .pricing-plan:hover {
      transform: scale(1.05);
    }
    .pricing-plan h3 {
      font-size: 1.5rem;
      color: #007BFF;
    }
    .pricing-plan .price {
      font-size: 2rem;
      font-weight: bold;
      color: #fff;
    }
    .pricing-plan ul {
      list-style: none;
      padding: 0;
    }
    .pricing-plan ul li {
      color: #ccc;
      margin: 10px 0;
    }
    .pricing-plan .cloud-button {
      margin-top: 20px;
    }

    /* Testimonials Section */
    .testimonials {
      padding: 50px 20px;
      background: #111;
      text-align: center;
    }
    .testimonials h2 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }
    .testimonial-item {
      background: #222;
      padding: 20px;
      border-radius: 10px;
      max-width: 600px;
      margin: 0 auto 20px;
    }
    .testimonial-item p {
      color: #ccc;
    }
    .testimonial-item strong {
      color: #007BFF;
    }

    /* Contact Section */
    .contact {
      padding: 50px 20px;
      background: #000;
      text-align: center;
    }
    .contact h2 {
      font-size: 2.5rem;
      margin-bottom: 20px;
    }
    .contact form {
      max-width: 600px;
      margin: 0 auto;
    }
    .contact input, .contact textarea {
      width: 100%;
      padding: 10px;
      margin: 10px 0;
      border: 1px solid #333;
      border-radius: 5px;
      background: #222;
      color: #fff;
    }
    .contact .cloud-button {
      margin-top: 20px;
    }

    /* Footer */
    footer {
      background: #000;
      color: #fff;
      text-align: center;
      padding: 20px 0;
    }
    footer a {
      color: #007BFF;
    }
  </style>
</head>
<body>
