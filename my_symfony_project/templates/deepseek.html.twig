  <!-- JavaScript for Chat Functionality -->
  <script>
    const chatBox = document.getElementById('chat-box');
    const chatInput = document.getElementById('chat-input');

    async function sendMessage() {
      const userMessage = chatInput.value.trim();
      if (!userMessage) return;

      // Add user message to chat box
      chatBox.innerHTML += `<div class="chat-message user">${userMessage}</div>`;
      chatInput.value = '';
      chatBox.scrollTop = chatBox.scrollHeight;

      // Call OpenAI ChatGPT API
      const response = await fetch('https://api.openai.com/v1/chat/completions', {
        method: 'POST',
        headers: {
          'Authorization': 'Bearer test-api-key', // Replace with your OpenAI API key
          'Content-Type': 'application/json',
        },
        body: JSON.stringify({
          model: 'gpt-3.5-turbo', // Use the ChatGPT model
          messages: [
            { role: 'user', content: userMessage } // Use the messages array
          ],
          max_tokens: 150,
        }),
      });

      const data = await response.json();
      const botMessage = data.choices[0].message.content; // Extract the bot's response

      // Add bot response to chat box
      chatBox.innerHTML += `<div class="chat-message bot">${botMessage}</div>`;
      chatBox.scrollTop = chatBox.scrollHeight;
    }
</script>
